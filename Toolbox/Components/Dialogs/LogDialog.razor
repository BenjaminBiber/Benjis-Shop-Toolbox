@using Toolbox.Components.Dialogs
@implements IDisposable
@inject ISnackbar Snackbar

<MudDialog MaxWidth="MaxWidth.Large">
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudPaper Class="p-2" Style="max-height:60vh; overflow:auto; background:#0b0b0b; color:#dcdcdc;">
            <pre style="white-space: pre-wrap;">@(_logBuffer is not null ? _logBuffer.Text : LogText)</pre>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="Close">Schlie√üen</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string Title { get; set; } = "Protokoll";
    [Parameter] public string LogText { get; set; } = string.Empty;
    [Parameter] public LogBuffer? LogBuffer { get; set; }

    private LogBuffer? _logBuffer;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (LogBuffer is not null)
        {
            _logBuffer = LogBuffer;
            _logBuffer.Changed += OnLogBufferChanged;
        }
    }

    private void OnLogBufferChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }

    private void Close() => MudDialog.Close();

    public void Dispose()
    {
        if (_logBuffer is not null)
        {
            _logBuffer.Changed -= OnLogBufferChanged;
        }
    }
}
